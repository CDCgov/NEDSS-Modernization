{
    "name": "ui",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.8.6",
        "@apollo/react-testing": "^4.0.0",
        "@cmsgov/design-system": "^6.0.0",
        "@trussworks/react-uswds": "^5.3.1",
        "@types/jest": "^28.1.6",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "classnames": "^2.3.2",
        "date-fns": "^2.30.0",
        "graphql": "^16.8.1",
        "lodash.debounce": "^4.0.8",
        "multiselect-react-dropdown": "^2.0.25",
        "react": "^17",
        "react-dom": "^17",
        "react-hook-form": "^7.36.1",
        "react-refresh": "^0.14.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "react-select": "^5.7.2",
        "typescript": "^4.7.4",
        "web-vitals": "^3.5.0"
    },
    "overrides": {
        "react-refresh": "^0.14.0"
    },
    "scripts": {
        "start-with-proxy": "cp src/setupProxy.local.js src/setupProxy.js && npm run start --backend='https://app.dev-cdc-nbs.eqsandbox.com'",
        "start": "react-scripts start",
        "build": "npx react-scripts test --watchAll=false && react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint .",
        "lint:fix": "eslint --fix",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "generate": "npm run consolidate-graphqls && npm run graphql:gql && npm run graphql:codegen && npm run openapi:codegen",
        "consolidate-graphqls": "rm -f src/generated/schema.graphqls && for f in ../modernization-api/src/main/resources/graphql/*.graphqls; do cat $f >> src/generated/schema.graphqls; done",
        "graphql:gql": "npx gqlg --schemaFilePath src/generated/schema.graphqls --destDirPath ./src/generated/gql",
        "graphql:codegen": "export API_TOKEN=$(curl http://localhost:8080/login -X POST --data '{\"username\":\"msa\"}' -H 'Content-Type:Application/JSON' | jq -r '.token') && graphql-codegen --config src/codegen.ts",
        "openapi:codegen": "npx openapi-typescript-codegen --input http://localhost:8080/v2/api-docs --output ./src/generated/ --useOptions && npm run openapi:set-port ",
        "openapi:set-port": "sed -i '' -e \"s/'http:\\/\\/localhost:8080'/Config.modernizationUrl/\" src/generated/core/OpenAPI.ts && echo \"import { Config } from 'config';\" >> src/generated/core/OpenAPI.ts",
        "generatePageBuilder": "npx openapi-typescript-codegen --input http://localhost:8095/nbs/page-builder/v2/api-docs --output ./src/apps/page-builder/generated/ --useOptions && npm run generatePageBuilder:set-port",
        "generatePageBuilder:set-port": "sed -i '' -e \"s/'http:\\/\\/localhost:8095'/Config.pageBuilderUrl/\" src/apps/page-builder/generated/core/OpenAPI.ts && echo \"import { Config } from 'config';\" >> src/apps/page-builder/generated/core/OpenAPI.ts"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "jest": {
        "globalSetup": "./global-setup.test.js"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/fragment-matcher": "^5.0.0",
        "@graphql-codegen/typescript": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^4.0.1",
        "@graphql-codegen/typescript-react-apollo": "^4.0.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^12",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^12",
        "@types/lodash.debounce": "^4.0.7",
        "@types/node": "^18.11.5",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "gql-generator": "^1.0.19",
        "http-proxy-middleware": "^2.0.6",
        "openapi-typescript-codegen": "^0.23.0",
        "prettier": "^2.7.1",
        "prop-types": "^15.8.1",
        "sass": "^1.54.0",
        "webpack": "^5.89.0"
    }
}
