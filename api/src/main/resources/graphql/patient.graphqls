scalar Date

type Query {
    findPatientById(id: ID!): Person
    findAllPatients(page: Page): [Person]!
    findPatientsByFilter(filter: PersonFilter!): [Person]!
}

type Mutation {
    createPatient(patient: PersonInput!): Person!
    deletePatient(id: ID!): Boolean
}

input Page {
    pageSize: Int!
    pageNumber: Int!
    sortDirection: SortDirection
    sortField: String
}

input PersonFilter {
    page: Page
    id: ID
    lastName: String
    firstName: String
    ssn: String
    phoneNumber: String
    DateOfBirth: Date
    DateOfBirthOperator: Operator
    gender: Gender
    deceased: Deceased
    address: String
    city: String
    state: String
    country: String
    zip: String
    ethnicity: String
    recordStatus: RecordStatus
}

input PersonInput {
    lastName: String
    firstName: String
    ssn: String
    phoneNumber: String
    DateOfBirth: Date
    DateOfBirthOperator: Operator
    gender: String
    deceased: Deceased
    address: String
    city: String
    state: String
    country: String
    zip: String
    ethnicity: String
}

enum Deceased {
    Y
    N
    UNK
}

enum Operator {
    EQUAL
    BEFORE
    AFTER
}

enum Gender {
    M
    F
    U
}

enum RecordStatus {
    ACTIVE
    LOG_DEL
}

enum SortDirection {
    ASC
    DESC
}

